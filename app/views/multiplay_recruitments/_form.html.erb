<%= form_with(model: multiplay_recruitment) do |form| %>
  <% if multiplay_recruitment.errors.any? %>
    <div class="error-messages">
      <h3><%= t('app.stages.errors.count', count: multiplay_recruitment.errors.count) %><%= t('app.stages.errors.has_errors') %>:</h3>
      <ul>
        <% multiplay_recruitment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title do %>
      <%= t('app.multiplay.form.title_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_field :title, class: "form-control", placeholder: t('app.multiplay.form.title_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :stage_guid, "#{t('app.multiplay.form.stage_selector_label')}#{t('app.common.optional')}" %>

    <!-- ã‚¹ãƒ†ãƒ¼ã‚¸é¸æŠžãƒˆãƒªã‚¬ãƒ¼ãƒœã‚¿ãƒ³ -->
    <button type="button" class="stage-selection-trigger" popovertarget="stage-selection-popover" data-stage-popover-trigger>
      <span>ðŸŽ®</span>
      <span><%= t('app.multiplay.form.select_stage_button') %></span>
    </button>

    <!-- é¸æŠžã•ã‚ŒãŸã‚¹ãƒ†ãƒ¼ã‚¸ã®è¡¨ç¤º -->
    <div class="stage-selection-summary" data-stage-summary id="stage-selection-summary">
      <% if multiplay_recruitment.stage_guid.present? %>
        <span class="stage-selected-badge">
          GUID: <%= multiplay_recruitment.stage_guid %>
          <button type="button" class="stage-clear-button" data-stage-clear>Ã—</button>
        </span>
      <% else %>
        <span class="text-muted"><%= t('app.multiplay.form.no_stage_selected') %></span>
      <% end %>
    </div>

    <!-- éš ã—ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ (å®Ÿéš›ã®ãƒ‡ãƒ¼ã‚¿é€ä¿¡ç”¨) -->
    <%= form.hidden_field :stage_guid, data: { stage_guid_field: true } %>

    <!-- ã¾ãŸã¯ã€æ‰‹å‹•ã§GUIDã‚’å…¥åŠ› -->
    <details class="mt-3">
      <summary class="cursor-pointer text-sm text-blue-600 hover:text-blue-800"><%= t('app.multiplay.form.manual_guid_input') %></summary>
      <div class="mt-2">
        <%= form.text_field :stage_guid, class: "form-control", placeholder: t('app.multiplay.form.guid_placeholder'), data: { manual_guid_input: true } %>
        <small class="form-text text-muted"><%= t('app.multiplay.form.guid_hint') %></small>
      </div>
    </details>
  </div>

  <!-- ã‚¹ãƒ†ãƒ¼ã‚¸é¸æŠžãƒãƒƒãƒ—ã‚ªãƒ¼ãƒãƒ¼ (Popover APIä½¿ç”¨) -->
  <div id="stage-selection-popover" popover class="stage-modal-popover" data-stage-popover>
    <div class="stage-modal-container">
      <div class="stage-modal-header">
        <h3 class="stage-modal-title"><%= t('app.multiplay.form.select_stage_title') %></h3>
        <button type="button" class="stage-modal-close" popovertarget="stage-selection-popover" popovertargetaction="hide">Ã—</button>
      </div>

      <!-- æ¤œç´¢ãƒ•ã‚©ãƒ¼ãƒ  -->
      <div class="stage-modal-search">
        <input type="text"
               id="stage-search-input"
               class="form-control"
               placeholder="<%= t('app.multiplay.form.search_stage_placeholder') %>"
               data-stage-search-input>
      </div>

      <!-- ã‚¿ãƒ– -->
      <div class="stage-modal-tabs">
        <button type="button" class="stage-tab active" data-tab="my-stages" data-stage-tab="my"><%= t('app.multiplay.form.my_stages_tab') %> (<span data-count="my"><%= @my_stages.size %></span>)</button>
        <button type="button" class="stage-tab" data-tab="other-stages" data-stage-tab="other"><%= t('app.multiplay.form.other_stages_tab') %> (<span data-count="other"><%= @other_stages.size %></span>)</button>
      </div>

      <div class="stage-modal-body">
        <!-- è‡ªåˆ†ã®å¹»å¢ƒ -->
        <div id="my-stages-tab" class="stage-tab-content active" data-stage-tab-content="my">
          <% if @my_stages.any? %>
            <div class="stage-list" data-stage-list="my">
              <% @my_stages.each do |stage| %>
                <div class="stage-item" data-stage-item data-stage-guid="<%= stage.stage_guid %>" data-stage-title="<%= stage.title %>">
                  <div class="stage-item-content">
                    <div class="stage-item-title"><%= stage.title %></div>
                    <div class="stage-item-guid">GUID: <%= stage.stage_guid %></div>
                  </div>
                  <button type="button" class="btn btn-sm btn-primary" data-select-stage="<%= stage.stage_guid %>" data-stage-title="<%= stage.title %>">
                    <%= t('app.multiplay.form.select_button') %>
                  </button>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <%= t('app.multiplay.form.no_my_stages') %>
            </div>
          <% end %>
        </div>

        <!-- ä»–ã®äººã®å¹»å¢ƒ -->
        <div id="other-stages-tab" class="stage-tab-content" data-stage-tab-content="other">
          <% if @other_stages.any? %>
            <div class="stage-list" data-stage-list="other">
              <% @other_stages.each do |stage| %>
                <div class="stage-item" data-stage-item data-stage-guid="<%= stage.stage_guid %>" data-stage-title="<%= stage.title %>">
                  <div class="stage-item-content">
                    <div class="stage-item-title"><%= stage.title %></div>
                    <div class="stage-item-guid">GUID: <%= stage.stage_guid %></div>
                  </div>
                  <button type="button" class="btn btn-sm btn-primary" data-select-stage="<%= stage.stage_guid %>" data-stage-title="<%= stage.title %>">
                    <%= t('app.multiplay.form.select_button') %>
                  </button>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <%= t('app.multiplay.form.no_other_stages') %>
            </div>
          <% end %>
        </div>

        <!-- æ¤œç´¢çµæžœãŒ0ä»¶ã®æ™‚ -->
        <div id="no-search-results" class="text-center text-muted py-4" style="display: none;">
          <%= t('app.multiplay.form.no_search_results') %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :difficulty, "#{t('app.multiplay.form.difficulty_label')}#{t('app.common.optional')}" %>
    <%= form.select :difficulty, difficulty_options, {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :max_players do %>
      <%= t('app.multiplay.form.max_players_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.number_field :max_players, class: "form-control", min: 1, max: 10, value: multiplay_recruitment.max_players || 4 %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, "#{t('app.multiplay.form.start_time_label')}#{t('app.common.optional')}" %>
    <%= form.datetime_local_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_time, "#{t('app.multiplay.form.end_time_label')}#{t('app.common.optional')}" %>
    <%= form.datetime_local_field :end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status do %>
      <%= t('app.multiplay.form.status_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.select :status, status_options, {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :description do %>
      <%= t('app.multiplay.form.description_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_area :description, rows: 8, class: "form-control", placeholder: t('app.multiplay.form.description_placeholder') %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

