<div class="container">
  <div class="auth-form">
    <h1>ログイン</h1>

    <%= form_with url: login_path, method: :post, data: { turbo: false } do |form| %>
      <div class="form-group">
        <%= form.label :login do %>
          ユーザー名またはメールアドレス<span class="required">*</span>
        <% end %>
        <%= form.text_field :login, class: "form-control", placeholder: "ユーザー名またはメールアドレスを入力", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :password do %>
          パスワード<span class="required">*</span>
        <% end %>
        <%= form.password_field :password, class: "form-control", placeholder: "パスワードを入力", required: true %>
      </div>

      <div class="form-actions">
        <%= form.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links">
      <p>アカウントをお持ちでないですか？ <%= link_to "新規登録", signup_path %></p>
      <p><%= link_to "パスワードをお忘れですか？", new_password_reset_path %></p>
    </div>
  </div>
</div>

