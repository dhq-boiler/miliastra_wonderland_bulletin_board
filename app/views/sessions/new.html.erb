<div class="min-h-screen">
  <div class="auth-form">
    <h1><%= t('app.users.login_title') %></h1>

    <%= form_with url: login_path, method: :post, data: { turbo: false } do |form| %>
      <div class="form-group">
        <%= form.label :login do %>
          <%= t('app.users.form.login_field_label') %><span class="required"><%= t('app.common.required') %></span>
        <% end %>
        <%= form.text_field :login, class: "form-control", placeholder: t('app.users.form.login_field_placeholder'), required: true %>
      </div>

      <div class="form-group">
        <%= form.label :password do %>
          <%= t('activerecord.attributes.user.password') %><span class="required"><%= t('app.common.required') %></span>
        <% end %>
        <%= form.password_field :password, class: "form-control", placeholder: t('app.users.form.password_placeholder'), required: true %>
      </div>

      <div class="form-actions">
        <%= form.submit t('app.menu.login'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="oauth-divider">
      <span><%= t('app.common.or') %></span>
    </div>

    <div class="oauth-buttons">
      <%= button_to t('app.users.oauth.google_login'), "/auth/google_oauth2", method: :post, class: "btn btn-google", data: { turbo: false } %>
    </div>

    <div class="auth-links">
      <p><%= t('app.users.links.no_account') %> <%= link_to t('app.menu.signup'), signup_path %></p>
      <p><%= link_to t('app.users.links.forgot_password'), new_password_reset_path %></p>
    </div>
  </div>
</div>

