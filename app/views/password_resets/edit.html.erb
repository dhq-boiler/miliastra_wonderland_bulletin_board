<div class="min-h-screen">
  <div class="auth-form">
    <h1>新しいパスワードを設定</h1>

    <p style="color: #666; margin-bottom: 20px;">
      <%= @user.username %>さん<br>
      新しいパスワードを入力してください。
    </p>

    <%= form_with model: @user, url: password_reset_path(@user.reset_password_token), method: :patch, data: { turbo: false } do |form| %>
      <div class="form-group">
        <%= form.label :password do %>
          新しいパスワード<span class="required">*</span>
        <% end %>
        <%= form.password_field :password, class: "form-control", placeholder: "6文字以上で入力", required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation do %>
          新しいパスワード（確認）<span class="required">*</span>
        <% end %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "パスワードを再入力", required: true %>
      </div>

      <div class="form-actions">
        <%= form.submit "パスワードを変更", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

