<div class="min-h-screen">
  <div class="auth-form">
    <h1><%= t('app.users.edit_title') %></h1>

    <%= form_with(model: @user, url: profile_path, method: :patch, data: { turbo: false }) do |form| %>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <h3><%= t('app.stages.errors.count', count: @user.errors.count) %><%= t('app.stages.errors.has_errors') %>:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="profile-section">
        <h2><%= t('app.users.sections.basic_info') %></h2>

        <% if @user.oauth_user? %>
          <div class="oauth-info-box">
            <p><strong>ðŸ“± <%= t('app.users.oauth.using_google') %></strong></p>
            <p class="form-text text-muted"><%= t('app.users.oauth.google_info') %></p>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :username, t('activerecord.attributes.user.username') %>
          <%= form.text_field :username, class: "form-control", disabled: true %>
          <small class="form-text text-muted"><%= t('app.users.form.username_hint') %></small>
        </div>

        <div class="form-group">
          <%= form.label :nickname, "#{t('activerecord.attributes.user.nickname')}#{t('app.common.optional')}" %>
          <%= form.text_field :nickname, class: "form-control", placeholder: t('app.users.form.nickname_placeholder') %>
          <small class="form-text text-muted"><%= t('app.users.form.nickname_hint') %></small>
        </div>

        <div class="form-group">
          <%= form.label :locale, t('activerecord.attributes.user.locale') %>
          <%= form.select :locale,
            options_for_select(
              I18n.available_locales.map { |locale| [t("languages.#{locale}"), locale] },
              @user.locale || I18n.default_locale
            ),
            {},
            class: "form-control"
          %>
        </div>

        <% unless @user.oauth_user? %>
          <div class="form-group">
            <%= form.label :email, "#{t('activerecord.attributes.user.email')}#{t('app.common.optional')}" %>
            <%= form.email_field :email, class: "form-control", placeholder: t('app.users.form.email_placeholder') %>
          </div>
        <% else %>
          <div class="form-group">
            <%= form.label :email, t('activerecord.attributes.user.email') %>
            <%= form.email_field :email, class: "form-control", disabled: true %>
            <small class="form-text text-muted"><%= t('app.users.oauth.email_readonly') %></small>
          </div>
        <% end %>
      </div>

      <% unless @user.oauth_user? %>
        <div class="profile-section">
          <h2><%= t('app.users.sections.change_password') %></h2>
          <p class="form-text text-muted"><%= t('app.users.sections.password_change_note') %></p>

          <div class="form-group">
            <%= form.label :current_password, t('activerecord.attributes.user.current_password') %>
            <%= form.password_field :current_password, class: "form-control", placeholder: t('app.users.form.current_password_placeholder') %>
          </div>

          <div class="form-group">
            <%= form.label :password, t('app.users.form.new_password_label') %>
            <%= form.password_field :password, class: "form-control", placeholder: t('app.users.form.new_password_placeholder') %>
          </div>

          <div class="form-group">
            <%= form.label :password_confirmation, t('app.users.form.new_password_confirmation_label') %>
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: t('app.users.form.password_confirmation_placeholder') %>
          </div>
        </div>
      <% end %>

      <div class="form-actions">
        <%= form.submit t('app.common.update'), class: "btn btn-primary" %>
        <%= link_to t('app.common.cancel'), stages_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .oauth-info-box {
    background-color: #e8f4fd;
    border: 1px solid #b3d9f2;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }

  .oauth-info-box p {
    margin: 0.5rem 0;
  }

  .oauth-info-box strong {
    color: #1a73e8;
  }

  .profile-section {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .profile-section:last-of-type {
    border-bottom: none;
  }

  .profile-section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #333;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s;
    margin-left: 0.5rem;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }
</style>

