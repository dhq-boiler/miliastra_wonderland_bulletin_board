<div class="min-h-screen">
  <div class="auth-form">
    <h1>新規登録</h1>

    <%= form_with(model: @user, url: signup_path, data: { turbo: false }) do |form| %>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <h3><%= pluralize(@user.errors.count, "個のエラー") %>があります:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :username do %>
          ユーザー名<span class="required">*</span>
        <% end %>
        <%= form.text_field :username, class: "form-control", placeholder: "3〜20文字で入力" %>
      </div>

      <div class="form-group">
        <%= form.label :email, "メールアドレス（任意）" %>
        <%= form.email_field :email, class: "form-control", placeholder: "email@example.com" %>
      </div>

      <div class="form-group">
        <%= form.label :password do %>
          パスワード<span class="required">*</span>
        <% end %>
        <%= form.password_field :password, class: "form-control", placeholder: "6文字以上で入力" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation do %>
          パスワード（確認）<span class="required">*</span>
        <% end %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "パスワードを再入力" %>
      </div>

      <div class="form-actions">
        <%= form.submit "登録", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links">
      <p>すでにアカウントをお持ちですか？ <%= link_to "ログイン", login_path %></p>
    </div>
  </div>
</div>

