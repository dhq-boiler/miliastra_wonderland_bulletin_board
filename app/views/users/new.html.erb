<div class="min-h-screen">
  <div class="auth-form">
    <h1><%= t('app.users.signup_title') %></h1>

    <%= form_with(model: @user, url: signup_path, data: { turbo: false }) do |form| %>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <h3><%= t('app.stages.errors.count', count: @user.errors.count) %><%= t('app.stages.errors.has_errors') %>:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :username do %>
          <%= t('activerecord.attributes.user.username') %><span class="required"><%= t('app.common.required') %></span>
        <% end %>
        <%= form.text_field :username, class: "form-control", placeholder: t('app.users.form.username_placeholder') %>
      </div>

      <div class="form-group">
        <%= form.label :nickname, "#{t('activerecord.attributes.user.nickname')}#{t('app.common.optional')}" %>
        <%= form.text_field :nickname, class: "form-control", placeholder: t('app.users.form.nickname_placeholder') %>
        <small class="form-text text-muted"><%= t('app.users.form.nickname_hint') %></small>
      </div>

      <div class="form-group">
        <%= form.label :email, "#{t('activerecord.attributes.user.email')}#{t('app.common.optional')}" %>
        <%= form.email_field :email, class: "form-control", placeholder: t('app.users.form.email_placeholder') %>
      </div>

      <div class="form-group">
        <%= form.label :locale, t('activerecord.attributes.user.locale') %>
        <%= form.select :locale,
          options_for_select(
            I18n.available_locales.map { |locale| [t("languages.#{locale}"), locale] },
            @user.locale || I18n.default_locale
          ),
          {},
          class: "form-control"
        %>
      </div>

      <div class="form-group">
        <%= form.label :password do %>
          <%= t('activerecord.attributes.user.password') %><span class="required"><%= t('app.common.required') %></span>
        <% end %>
        <%= form.password_field :password, class: "form-control", placeholder: t('app.users.form.password_placeholder') %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation do %>
          <%= t('activerecord.attributes.user.password_confirmation') %><span class="required"><%= t('app.common.required') %></span>
        <% end %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: t('app.users.form.password_confirmation_placeholder') %>
      </div>

      <div class="form-actions">
        <%= form.submit t('app.menu.signup'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="oauth-divider">
      <span><%= t('app.common.or') %></span>
    </div>

    <div class="oauth-buttons">
      <%= button_to t('app.users.oauth.google_signup'), "/auth/google_oauth2", method: :post, class: "btn btn-google", data: { turbo: false } %>
    </div>

    <div class="auth-links">
      <p><%= t('app.users.links.have_account') %> <%= link_to t('app.menu.login'), login_path %></p>
    </div>
  </div>
</div>

