<div class="max-w-4xl mx-auto p-5 bg-white min-h-screen">
  <h1 class="text-gray-800 border-b-4 border-blue-500 pb-2.5 mb-8 text-3xl font-bold"><%= t('app.stages.title') %></h1>


  <div class="actions">
    <% if logged_in? %>
      <%= link_to t('app.stages.new_post'), new_stage_path, class: "btn btn-primary" %>
    <% else %>
      <p class="login-prompt"><%= t('app.stages.login_required', login_link: link_to(t('app.menu.login'), login_path)).html_safe %></p>
    <% end %>
  </div>

  <!-- Ê§úÁ¥¢„Éï„Ç©„Éº„É† -->
  <div class="mt-6 mb-6">
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
      <!-- Ê§úÁ¥¢„Éò„ÉÉ„ÉÄ„Éº -->
      <button type="button" onclick="toggleStageSearchForm()" class="search-toggle-button w-full px-6 py-4 flex items-center justify-between transition-all duration-200 cursor-pointer">
        <div class="flex items-center gap-3">
          <svg class="search-icon w-4 h-4 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <span class="search-text text-base font-semibold text-gray-800" style="white-space: nowrap;">Ê§úÁ¥¢Êù°‰ª∂</span>
          <% has_search_params = @search_keyword.present? || @search_device_tag_ids&.any? || @search_category_tag_ids&.any? || @search_other_tag_ids&.any? %>
          <% if has_search_params %>
            <span class="px-2.5 py-0.5 text-xs font-semibold bg-blue-100 text-blue-700 rounded">Ê§úÁ¥¢‰∏≠</span>
          <% end %>
        </div>
        <svg id="stage-search-chevron" class="search-chevron w-4 h-4 text-gray-500 flex-shrink-0 <%= has_search_params ? 'rotate-180' : '' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <!-- Ê§úÁ¥¢„Éï„Ç©„Éº„É†„Ç≥„É≥„ÉÜ„É≥„ÉÑ -->
      <div id="stage-search-form-content" class="<%= has_search_params ? '' : 'hidden' %>">
        <%= form_with url: stages_path, method: :get, local: true, class: "p-6 border-t border-gray-200 bg-gray-50", data: { controller: "tag-modal" } do |form| %>
          <div class="grid grid-cols-1 gap-4">
            <!-- „Ç≠„Éº„ÉØ„Éº„ÉâÊ§úÁ¥¢ -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <%= t('app.stages.search.keyword_label') %>
              </label>
              <%= form.text_field :keyword, value: @search_keyword, class: "form-control w-full", placeholder: t('app.stages.search.keyword_placeholder') %>
            </div>

            <!-- „Çø„Ç∞ÈÅ∏Êäû -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <%= t('app.stages.form.tags_label') %>
              </label>
              <button type="button" class="tag-selection-trigger" popovertarget="search-tag-popover">
                <span>üè∑Ô∏è</span>
                <span>„Çø„Ç∞„ÅßÁµû„ÇäËæº„ÇÄ</span>
              </button>

              <div class="tag-selection-summary empty mt-2" data-tag-modal-target="summary" data-empty-text="„Çø„Ç∞„ÅåÈÅ∏Êäû„Åï„Çå„Å¶„ÅÑ„Åæ„Åõ„Çì">
                „Çø„Ç∞„ÅåÈÅ∏Êäû„Åï„Çå„Å¶„ÅÑ„Åæ„Åõ„Çì
              </div>
            </div>
          </div>

      <!-- „Çø„Ç∞„Éù„ÉÉ„Éó„Ç™„Éº„Éê„Éº (Popover API‰ΩøÁî®) -->
      <div id="search-tag-popover" popover class="tag-modal-popover" data-tag-modal-target="popover">
        <div class="tag-modal-container">
          <div class="tag-modal-header">
            <h3 class="tag-modal-title">„Çø„Ç∞„ÅßÁµû„ÇäËæº„ÇÄ</h3>
            <button type="button" class="tag-modal-close" popovertarget="search-tag-popover" popovertargetaction="hide">√ó</button>
          </div>

          <div class="tag-modal-body">
            <!-- „Éá„Éê„Ç§„Çπ„Çø„Ç∞ -->
            <% if @device_tags.any? %>
              <div class="tag-category-section">
                <h4 class="tag-category-title"><%= t('app.tags.categories.device') %></h4>
                <div class="tag-checkboxes">
                  <% @device_tags.each do |tag| %>
                    <div class="tag-checkbox-item">
                      <%= check_box_tag 'device_tag_ids[]', tag.id, @search_device_tag_ids&.include?(tag.id.to_s), id: "search_device_tag_#{tag.id}", data: { tag_modal_target: "checkbox", action: "change->tag-modal#toggleCheckbox" } %>
                      <%= label_tag "search_device_tag_#{tag.id}", tag.name %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- „Ç´„ÉÜ„Ç¥„É™„Éº„Çø„Ç∞ -->
            <% if @category_tags.any? %>
              <div class="tag-category-section">
                <h4 class="tag-category-title"><%= t('app.tags.categories.category') %></h4>
                <div class="tag-checkboxes">
                  <% @category_tags.each do |tag| %>
                    <div class="tag-checkbox-item">
                      <%= check_box_tag 'category_tag_ids[]', tag.id, @search_category_tag_ids&.include?(tag.id.to_s), id: "search_category_tag_#{tag.id}", data: { tag_modal_target: "checkbox", action: "change->tag-modal#toggleCheckbox" } %>
                      <%= label_tag "search_category_tag_#{tag.id}", tag.name %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- „Åù„ÅÆ‰ªñ„ÅÆ„Çø„Ç∞ -->
            <% if @other_tags.any? %>
              <div class="tag-category-section">
                <h4 class="tag-category-title"><%= t('app.tags.categories.other') %></h4>
                <div class="tag-checkboxes">
                  <% @other_tags.each do |tag| %>
                    <div class="tag-checkbox-item">
                      <%= check_box_tag 'other_tag_ids[]', tag.id, @search_other_tag_ids&.include?(tag.id.to_s), id: "search_other_tag_#{tag.id}", data: { tag_modal_target: "checkbox", action: "change->tag-modal#toggleCheckbox" } %>
                      <%= label_tag "search_other_tag_#{tag.id}", tag.name %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="tag-modal-footer">
            <button type="button" class="btn btn-secondary" data-action="click->tag-modal#clearAll">„Åô„Åπ„Å¶„ÇØ„É™„Ç¢</button>
            <button type="button" class="btn btn-primary" data-action="click->tag-modal#apply">ÈÅ©Áî®</button>
          </div>
        </div>
      </div>

          <!-- „Éú„Çø„É≥ -->
          <div class="flex gap-3 mt-4 pt-4 border-t border-gray-200">
            <%= form.submit t('app.stages.search.search_button'), class: "btn btn-primary" %>
            <%= link_to t('app.stages.search.reset_button'), stages_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    function toggleStageSearchForm() {
      const content = document.getElementById('stage-search-form-content');
      const chevron = document.getElementById('stage-search-chevron');
      content.classList.toggle('hidden');
      chevron.classList.toggle('rotate-180');
    }
  </script>

  <div class="stages-list">
    <% if @stages.any? %>
      <% @stages.each do |stage| %>
        <div class="stage-card">
          <h2><%= link_to stage.title, stage_path(stage) %></h2>
          <div class="stage-info">
            <span class="stage-guid"><%= t('app.common.guid') %>: <%= clipboard_copy(stage.stage_guid) %></span>
            <% if stage.difficulty.present? %>
              <span class="difficulty"><%= t('app.common.difficulty_label') %>: <%= stage.difficulty_text %></span>
            <% end %>
            <% if stage.locale.present? %>
              <span class="language"><%= t('app.common.language_label') %>: <%= t("languages.#{stage.locale}") %></span>
            <% end %>
            <% if @multiplay_counts[stage.stage_guid].to_i > 0 %>
              <%= link_to multiplay_recruitments_path(stage_guid: stage.stage_guid), target: "_blank", rel: "noopener noreferrer", style: "text-decoration: none; display: inline-block; margin-right: 0.625rem;" do %>
                <span style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.25rem 0.625rem; border-radius: 0.25rem; display: inline-block; font-weight: 600; font-size: 0.875rem; box-shadow: 0 1px 2px rgba(16, 185, 129, 0.2);">
                  <%= t('app.stages.show.multiplay_recruitments') %> (<%= @multiplay_counts[stage.stage_guid] %>)
                </span>
              <% end %>
            <% end %>
          </div>
          <% if stage.tags.any? %>
            <div class="stage-tags mt-2 mb-2">
              <% stage.tags.each do |tag| %>
                <span class="tag-badge bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm mr-1"><%= tag.name %></span>
              <% end %>
            </div>
          <% end %>
          <p class="description"><%= truncate(stage.description, length: 200) %></p>
          <div class="meta">
            <span class="author">
              <%= t('app.common.posted_by') %>: <%= link_to stage.user.display_name, user_path(stage.user), class: "text-blue-600 hover:text-blue-800 underline" %>
              <% if stage.user.admin? %>
                <span class="admin-badge"><%= t('app.common.admin_badge') %></span>
              <% end %>
            </span>
            <span class="date"><%= t('app.common.posted_at') %>: <%= l(stage.created_at, format: :short) %></span>
            <%= diff_time(stage.created_at, "span", { class: "diff-time" }, auto_update: true) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="no-stages"><%= t('app.stages.no_posts') %></p>
    <% end %>
  </div>
</div>

