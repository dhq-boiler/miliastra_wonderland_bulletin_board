<%= form_with(model: stage, data: { controller: "tag-modal" }) do |form| %>
  <% if stage.errors.any? %>
    <div class="error-messages">
      <h3><%= t('app.stages.errors.count', count: stage.errors.count) %><%= t('app.stages.errors.has_errors') %>:</h3>
      <ul>
        <% stage.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title do %>
      <%= t('app.stages.form.title_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_field :title, class: "form-control", placeholder: t('app.stages.form.title_placeholder') %>
  </div>


  <div class="form-group">
    <%= form.label :stage_guid do %>
      <%= t('app.stages.form.guid_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_field :stage_guid, class: "form-control", placeholder: t('app.stages.form.guid_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty, "#{t('app.stages.form.difficulty_label')}#{t('app.common.optional')}" %>
    <%= form.select :difficulty,
        [
          [t('app.stages.form.difficulty_placeholder'), ""],
          [t('app.stages.form.difficulty_easy'), "easy"],
          [t('app.stages.form.difficulty_normal'), "normal"],
          [t('app.stages.form.difficulty_hard'), "hard"],
          [t('app.stages.form.difficulty_very_hard'), "very_hard"]
        ],
        {},
        { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :locale do %>
      <%= t('app.stages.form.locale_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.select :locale,
        User::AVAILABLE_LOCALES.map { |locale| [t("languages.#{locale}"), locale] },
        {},
        { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :description do %>
      <%= t('app.stages.form.description_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_area :description, rows: 8, class: "form-control", placeholder: t('app.stages.form.description_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :tips, "#{t('app.stages.form.tips_label')}#{t('app.common.optional')}" %>
    <%= form.text_area :tips, rows: 6, class: "form-control", placeholder: t('app.stages.form.tips_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :tag_ids, "#{t('app.stages.form.tags_label')}#{t('app.common.optional')}" %>

    <button type="button" class="tag-selection-trigger" popovertarget="stage-tag-popover">
      <span>üè∑Ô∏è</span>
      <span>„Çø„Ç∞„ÇíÈÅ∏Êäû</span>
    </button>

    <div class="tag-selection-summary empty" data-tag-modal-target="summary" data-empty-text="„Çø„Ç∞„ÅåÈÅ∏Êäû„Åï„Çå„Å¶„ÅÑ„Åæ„Åõ„Çì">
      „Çø„Ç∞„ÅåÈÅ∏Êäû„Åï„Çå„Å¶„ÅÑ„Åæ„Åõ„Çì
    </div>

    <!-- „Çø„Ç∞„Éù„ÉÉ„Éó„Ç™„Éº„Éê„Éº (Popover API‰ΩøÁî®) -->
    <div id="stage-tag-popover" popover class="tag-modal-popover" data-tag-modal-target="popover">
      <div class="tag-modal-container">
        <div class="tag-modal-header">
          <h3 class="tag-modal-title">„Çø„Ç∞„ÇíÈÅ∏Êäû</h3>
          <button type="button" class="tag-modal-close" popovertarget="stage-tag-popover" popovertargetaction="hide">√ó</button>
        </div>

        <div class="tag-modal-body">
          <% if @device_tags.present? || @category_tags.present? || @other_tags.present? %>
            <!-- „Éá„Éê„Ç§„Çπ„Çø„Ç∞ -->
            <% device_tags = Tag.device.ordered %>
            <% if device_tags.any? %>
              <div class="tag-category-section">
                <h4 class="tag-category-title"><%= t('app.tags.categories.device') %></h4>
                <div class="tag-checkboxes">
                  <%= form.collection_check_boxes :tag_ids, device_tags, :id, :name, { checked: stage.tag_ids.include?(device_tags.map(&:id)) }, { class: 'hidden' } do |b| %>
                    <div class="tag-checkbox-item">
                      <%= b.check_box({ data: { tag_modal_target: "checkbox", action: "change->tag-modal#toggleCheckbox" } }) %>
                      <%= b.label %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- „Ç´„ÉÜ„Ç¥„É™„Éº„Çø„Ç∞ -->
            <% category_tags = Tag.category_type.ordered %>
            <% if category_tags.any? %>
              <div class="tag-category-section">
                <h4 class="tag-category-title"><%= t('app.tags.categories.category') %></h4>
                <div class="tag-checkboxes">
                  <%= form.collection_check_boxes :tag_ids, category_tags, :id, :name, {}, { class: 'hidden' } do |b| %>
                    <div class="tag-checkbox-item">
                      <%= b.check_box({ data: { tag_modal_target: "checkbox", action: "change->tag-modal#toggleCheckbox" } }) %>
                      <%= b.label %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- „Åù„ÅÆ‰ªñ„ÅÆ„Çø„Ç∞ -->
            <% other_tags = Tag.other.ordered %>
            <% if other_tags.any? %>
              <div class="tag-category-section">
                <h4 class="tag-category-title"><%= t('app.tags.categories.other') %></h4>
                <div class="tag-checkboxes">
                  <%= form.collection_check_boxes :tag_ids, other_tags, :id, :name, {}, { class: 'hidden' } do |b| %>
                    <div class="tag-checkbox-item">
                      <%= b.check_box({ data: { tag_modal_target: "checkbox", action: "change->tag-modal#toggleCheckbox" } }) %>
                      <%= b.label %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted"><%= t('app.stages.form.no_tags_available') %></p>
          <% end %>
        </div>

        <div class="tag-modal-footer">
          <button type="button" class="btn btn-secondary" data-action="click->tag-modal#clearAll">„Åô„Åπ„Å¶„ÇØ„É™„Ç¢</button>
          <button type="button" class="btn btn-primary" data-action="click->tag-modal#apply">ÈÅ©Áî®</button>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

