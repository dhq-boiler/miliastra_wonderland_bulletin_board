<%= form_with(model: stage) do |form| %>
  <% if stage.errors.any? %>
    <div class="error-messages">
      <h3><%= t('app.stages.errors.count', count: stage.errors.count) %><%= t('app.stages.errors.has_errors') %>:</h3>
      <ul>
        <% stage.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title do %>
      <%= t('app.stages.form.title_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_field :title, class: "form-control", placeholder: t('app.stages.form.title_placeholder') %>
  </div>


  <div class="form-group">
    <%= form.label :stage_guid do %>
      <%= t('app.stages.form.guid_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_field :stage_guid, class: "form-control", placeholder: t('app.stages.form.guid_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty, "#{t('app.stages.form.difficulty_label')}#{t('app.common.optional')}" %>
    <%= form.select :difficulty,
        [
          [t('app.stages.form.difficulty_placeholder'), ""],
          [t('app.stages.form.difficulty_easy'), "easy"],
          [t('app.stages.form.difficulty_normal'), "normal"],
          [t('app.stages.form.difficulty_hard'), "hard"],
          [t('app.stages.form.difficulty_very_hard'), "very_hard"]
        ],
        {},
        { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :locale do %>
      <%= t('app.stages.form.locale_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.select :locale,
        User::AVAILABLE_LOCALES.map { |locale| [t("languages.#{locale}"), locale] },
        {},
        { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :description do %>
      <%= t('app.stages.form.description_label') %><span class="required"><%= t('app.common.required') %></span>
    <% end %>
    <%= form.text_area :description, rows: 8, class: "form-control", placeholder: t('app.stages.form.description_placeholder') %>
  </div>

  <div class="form-group">
    <%= form.label :tips, "#{t('app.stages.form.tips_label')}#{t('app.common.optional')}" %>
    <%= form.text_area :tips, rows: 6, class: "form-control", placeholder: t('app.stages.form.tips_placeholder') %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

