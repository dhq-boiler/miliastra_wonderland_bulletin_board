<div class="comment-item">
  <div class="comment-header">
    <span class="comment-author">
      <%= comment.user.display_name %>
      <% if comment.user.admin? %>
        <span class="admin-badge">管理者</span>
      <% end %>
    </span>
    <span class="comment-date">
      <%= l(comment.created_at, format: :long) %>
    </span>
    <% diff_time(comment.created_at, "span", { class: "diff-date" }, auto_update: true) %>
  </div>
  <div class="comment-content">
    <%= simple_format(comment.content) %>
  </div>
  <% if can_delete_comment?(comment) %>
    <div class="comment-actions">
      <%= button_to "削除", multiplay_recruitment_comment_path(multiplay_recruitment, comment),
                    method: :delete,
                    data: { turbo_confirm: "このコメントを削除しますか？" },
                    class: "btn-comment-delete" %>
    </div>
  <% end %>
</div>

