# Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ============================================
# Rails Configuration
# ============================================
# Rails master key for accessing credentials
# Get this from: cat config/master.key
RAILS_MASTER_KEY=your_rails_master_key_here

# ============================================
# Database Configuration (Production)
# ============================================
# PostgreSQL configuration for production deployment
# These are used by config/database.yml
DB_HOST=YOUR_SERVER_IP_ADDRESS
DB_NAME=miliastra_wonderland_bulletin_board_production
DB_USERNAME=postgres
DB_PASSWORD=your_strong_password_here
DB_PORT=5432

# ============================================
# Deployment Configuration (Kamal)
# ============================================
# Server IP address for deployment
# Replace with your actual EC2 or VPS server IP address
SERVER_IP_ADDRESS=YOUR_SERVER_IP_ADDRESS

# PostgreSQL password for the database container
# Generate a strong password with: openssl rand -base64 32
POSTGRES_PASSWORD=your_postgres_password_here

# Docker registry password (if using private registry)
# KAMAL_REGISTRY_PASSWORD=your_registry_password_here

# ============================================
# Email Configuration (AWS SES)
# ============================================
# AWS credentials for Simple Email Service (SES)
# Get these from AWS IAM Console
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# Email sender address (must be verified in AWS SES)
MAILER_FROM_ADDRESS=noreply@miliastra-wonderland-bulletin-board.com

# Application host for mailer links
APP_HOST=miliastra-wonderland-bulletin-board.com

# ============================================
# Development Email Configuration (Optional)
# ============================================
# For local development, you can use MailCatcher or similar
# SMTP_ADDRESS=localhost
# SMTP_PORT=1025

# ============================================
# Development/Test Configuration (Optional)
# ============================================
# Usually not needed for development, but available if needed
# RAILS_ENV=development
# RACK_ENV=development

